#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import dp kivy.metrics.dp
#:import MDSeparator kivymd.uix.card.MDSeparator
#:import TwoLineListItem kivymd.uix.list.TwoLineListItem
#:import get_color_from_hex kivy.utils.get_color_from_hex 
#:import Animation kivy.animation.Animation

#:kivy 2.1.0

<BaseScreen>:
    MDLabel:
        text: root.name
        halign: 'center'

<Setting>:
    name: 'Settings'
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(16)
        spacing: dp(16)

        MDLabel:
            text: 'Pengaturan & Laporan'
            font_style: 'H5'
            halign: 'center'
            size_hint_y: None
            height: dp(48)

        MDTextField:
            id: outlet_name_field
            hint_text: 'Nama Outlet'
            helper_text: 'Masukkan nama outlet sebelum mencetak laporan'
            helper_text_mode: 'on_focus'
            mode: 'rectangle'
            size_hint_y: None
            height: dp(48)
            text: app.get_last_outlite_name() if hasattr(app, 'get_last_outlite_name') else ''

        MDRaisedButton:
            text: 'Cetak Laporan Keuangan'
            icon: 'file-excel'
            md_bg_color: app.theme_cls.primary_color
            on_release: app.export_sales_report_to_excel(outlet_name_field.text)
            size_hint_y: None
            height: dp(48)

        Widget:
            size_hint_y: 1

<MenuCard>:
    name: ""
    image_path: ""
    price: 0
    actual_image_source: ""

    orientation: "vertical"
    spacing: dp(0)
    padding: dp(0)
    size_hint_y: None
    height: self.minimum_height
    elevation: 2
    radius: [dp(15), dp(15), dp(15), dp(15)]

    FitImage:
        id: product_image_in_card
        source: root.actual_image_source
        size_hint_y: None
        height: dp(100)
        radius: [dp(15), dp(15), dp(0), dp(0)]
        allow_stretch: False
        keep_ratio: True
        mipmap: True

    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: [dp(10), dp(4), dp(10), dp(10)]
        spacing: dp(4)

        MDLabel:
            text: root.name
            halign: "center"
            theme_text_color: "Primary"
            font_style: "Subtitle1"
            bold: True
            adaptive_height: True

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            MDLabel:
                text: f"Rp {root.price:,.0f}".replace(",", ".")
                halign: "left"
                theme_text_color: "Secondary"
                font_style: "Body1"
                adaptive_height: True
                size_hint_x: 0.75
                pos_hint: {"center_y": .5}
            MDIconButton:
                icon: "plus-circle"
                on_release: root.add_item_to_cart()
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                pos_hint: {"center_y": .5}
                user_font_size: "24sp"

<CartListItem>:
    orientation: 'horizontal'
    adaptive_height: True
    size_hint_y: None
    padding: dp(10)
    spacing: dp(10)
    md_bg_color: app.theme_cls.bg_light 

    FitImage:
        source: root.actual_item_image_path
        size_hint: None, None
        size: dp(72), dp(72)
        radius: [dp(4)]

    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        spacing: dp(4)

        MDLabel:
            text: root.item_name
            font_style: "Subtitle1"
            bold: True
            adaptive_height: True
            shorten: True
            shorten_from: 'right'
            
        MDLabel:
            text: f"Rp. {root.item_price:,.0f}".replace(",", ".")
            theme_text_color: "Secondary"
            font_style: "Body2"
            adaptive_height: True

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            size_hint_y: None
            spacing: dp(8)
            padding: [0, dp(4), 0, 0]

            MDIconButton:
                icon: "plus-box"
                on_release: root.increment_quantity()
                pos_hint: {'center_y': .5}

            MDLabel:
                text: str(root.item_quantity)
                halign: "center"
                font_style: "Subtitle1"
                bold: True
                adaptive_height: True
                size_hint_x: None
                width: dp(28)
                pos_hint: {'center_y': .5}

            MDIconButton:
                icon: "minus-box"
                on_release: root.decrement_quantity()
                pos_hint: {'center_y': .5}

<Cart>:
    name: 'Cart'
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            size_hint_y: None
            height: dp(56)
            padding: dp(10)
            MDLabel:
                text: "Keranjang Belanja"
                halign: 'center'
                font_style: 'H5'
                adaptive_height: True

        ScrollView:
            size_hint_y: 1 
            MDBoxLayout:
                id: cart_items_list
                orientation: 'vertical'
                adaptive_height: True
                padding: dp(8) 
                spacing: dp(8) 

        MDSeparator:
            height: dp(1)

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            adaptive_height: False
            padding: [dp(16), dp(5), dp(16), dp(10)] 
            spacing: dp(2)

            MDBoxLayout: 
                adaptive_height: False
                MDLabel:
                    text: "Item"
                    size_hint_x: 0.8 
                    halign: 'left'
                MDLabel:
                    id: total_items_label
                    text: "0"
                    halign: 'right'
                    bold: True

            MDBoxLayout:
                adaptive_height: False
                MDLabel:
                    text: "Total"
                    size_hint_x: 0.8 
                    halign: 'left'
                    font_style: "Subtitle1" 
                    bold: True
                MDLabel:
                    id: total_price_label
                    text: "Rp0"
                    halign: 'right'
                    font_style: "Subtitle1"
                    bold: True
                    theme_text_color: "Primary"

        MDBoxLayout:
            id: payment_details_panel
            orientation: 'vertical'
            size_hint_y: None
            height: 0
            opacity: 0
            padding: [dp(16), dp(12), dp(16), dp(16)] 
            spacing: dp(12)

            MDTextField:
                id: payment_amount_field
                hint_text: "Nominal Dibayar"
                input_filter: "float" 
                on_text: root.calculate_and_display_change() 
                size_hint_y: None
                height: self.minimum_height 

            MDBoxLayout:
                adaptive_height: True
                size_hint_y: None 
                padding: [0, dp(4), 0, dp(4)]
                MDLabel:
                    text: "Kembalian"
                    size_hint_x: 0.7 
                    halign: 'left'
                    theme_text_color: "Secondary"
                MDLabel:
                    id: change_label
                    text: "Rp0" 
                    halign: 'right'
                    font_style: "Subtitle1" 
                    bold: True
                    theme_text_color: "Primary"
            
            MDRaisedButton:
                id: confirm_payment_button 
                text: "KONFIRMASI PEMBAYARAN"
                on_release: root.process_payment() 
                size_hint_x: 1 
                padding: dp(12) 
                md_bg_color: app.theme_cls.primary_color 

        MDFillRoundFlatIconButton: 
            id: pay_trigger_button
            text: "LANJUT KE PEMBAYARAN"
            icon: "chevron-double-up"
            font_style: "Button" 
            font_size: "18sp"
            size_hint_y: None
            height: dp(52) 
            size_hint_x: 1 
            md_bg_color: app.theme_cls.primary_color 
            on_release: root.toggle_payment_panel()

<AddMenu>:
    name: 'Add Menu'
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            padding: [dp(12), dp(10), dp(12), dp(10)]
            spacing: dp(10)
            MDTextField:
                id: search_field
                hint_text: "Search Item"
                mode: "rectangle"
                radius: [dp(8), dp(8), dp(8), dp(8)]
                on_text: root.search_items(self.text)
                size_hint_y: None
                height: dp(48)
                text_color_normal: 0, 0, 0, 1
                hint_text_color_normal: .5, .5, .5, 1
                size_hint_x: 1
                icon_left: "magnify"

            MDIconButton:
                icon: "plus-circle-outline"
                on_release: root.open_add_item_dialog()
                pos_hint: {"center_y": .5}
                user_font_size: "30sp"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color

        ScrollView:
            GridLayout:
                id: search_result_list
                cols: 2
                size_hint_y: None
                height: self.minimum_height
                padding: dp(10)
                spacing: dp(10)

<TableHistoryListItem>:
    adaptive_height: True
    orientation: 'horizontal'
    padding: [dp(16), dp(12), dp(8), dp(12)]
    spacing: dp(8)

    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        size_hint_x: 0.9
        spacing: dp(2)

        MDLabel:
            text: root.item_name
            font_style: "Subtitle1" 
            adaptive_height: True
            halign: 'left'
        MDLabel:
            text: root.item_status
            font_style: "Caption"
            theme_text_color: "Secondary"
            adaptive_height: True
            halign: 'left'

    MDIconButton:
        icon: "dots-vertical"
        user_font_size: "24sp"
        on_release: root.show_options_menu(self)
        pos_hint: {'center_y': 0.5}

<History>:
    name: 'History' 
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout: 
            size_hint_y: None
            height: dp(56) 
            padding: dp(10)
            MDLabel:
                text: "Histori Pemesanan Meja"
                halign: 'center'
                font_style: 'H5' 
                adaptive_height: True
        
        MDSeparator:

        ScrollView: 
            MDList:
                id: history_list 
                padding: dp(10)
                spacing: dp(8)
        
    MDFloatingActionButton: 
        icon: "table-plus" 
        elevation: 2 
        pos_hint: {"center_x": .9, "center_y": .1} 
        on_release: root.open_add_table_dialog()

MDBoxLayout:
    orientation: 'vertical'
    md_bg_color: app.theme_cls.bg_light

    MDScreenManager:
        id: screen_manager
        transition: NoTransition()
        current: 'Add Menu'

        Cart:
            
        AddMenu:
            
        History:
            
        Setting:

    BoxLayout:
        id: bottom_nav_container
        size_hint_y: None
        height: "60dp"
        padding: [dp(20), dp(5), dp(20), dp(10)]

        MDCard:
            md_bg_color: app.theme_cls.primary_color
            radius: [30, 30, 30, 30]
            elevation: 4
            padding: 0

            BoxLayout:
                orientation: 'horizontal'
                padding: [dp(5), 0, dp(5), 0]
                spacing: dp(8)

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 1
                    spacing: dp(2)
                    MDCard:
                        size_hint_y: None
                        height: "2dp"
                        size_hint_x: None
                        width: dp(24)
                        md_bg_color: 1, 1, 1, 1
                        opacity: 1 if app.current_active == 'Cart' else 0
                        radius: [dp(1.5)]
                        pos_hint: {'center_x': 0.5}
                        elevation: 0
                    MDIconButton:
                        id: cart_nav_icon_target
                        icon: "cart" if app.current_active == 'Cart' else "cart-outline"
                        theme_icon_color: "Custom"
                        icon_color: 1, 1, 1, 1
                        icon_size: "26dp" if app.current_active == 'Cart' else "24dp"
                        ripple_scale: 0
                        on_release: app.switch_screen('Cart')
                        md_bg_color: 0, 0, 0, 0
                        pos_hint: {'center_x': 0.5}

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 1
                    spacing: dp(2)
                    MDCard:
                        size_hint_y: None
                        height: "2dp"
                        size_hint_x: None
                        width: dp(24)
                        md_bg_color: 1, 1, 1, 1
                        opacity: 1 if app.current_active == 'Add Menu' else 0
                        radius: [dp(1)]
                        pos_hint: {'center_x': 0.5}
                        elevation: 0
                    MDIconButton:
                        icon: "plus-box" if app.current_active == 'Add Menu' else "plus-box-outline"
                        theme_icon_color: "Custom"
                        icon_color: 1, 1, 1, 1
                        icon_size: "26dp" if app.current_active == 'Add Menu' else "24dp"
                        ripple_scale: 0
                        on_release: app.switch_screen('Add Menu')
                        md_bg_color: 0, 0, 0, 0
                        pos_hint: {'center_x': 0.5}

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 1
                    spacing: dp(2)
                    MDCard:
                        size_hint_y: None
                        height: "2dp"
                        size_hint_x: None
                        width: dp(24)
                        md_bg_color: 1, 1, 1, 1
                        opacity: 1 if app.current_active == 'History' else 0
                        radius: [dp(1)]
                        pos_hint: {'center_x': 0.5}
                        elevation: 0
                    MDIconButton:
                        icon: "clock" if app.current_active == 'History' else "clock-outline"
                        theme_icon_color: "Custom"
                        icon_color: 1, 1, 1, 1
                        icon_size: "26dp" if app.current_active == 'History' else "24dp"
                        ripple_scale: 0
                        on_release: app.switch_screen('History')
                        md_bg_color: 0, 0, 0, 0
                        pos_hint: {'center_x': 0.5}

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 1
                    spacing: dp(2)
                    MDCard:
                        size_hint_y: None
                        height: "2dp"
                        size_hint_x: None
                        width: dp(24)
                        md_bg_color: 1, 1, 1, 1
                        opacity: 1 if app.current_active == 'Settings' else 0
                        radius: [dp(1.5)]
                        pos_hint: {'center_x': 0.5}
                        elevation: 0
                    MDIconButton:
                        icon: "cog" if app.current_active == 'Settings' else "cog-outline"
                        theme_icon_color: "Custom"
                        icon_color: 1, 1, 1, 1
                        icon_size: "26dp" if app.current_active == 'Settings' else "24dp"
                        ripple_scale: 0
                        on_release: app.switch_screen('Settings')
                        md_bg_color: 0, 0, 0, 0
                        pos_hint: {'center_x': 0.5}